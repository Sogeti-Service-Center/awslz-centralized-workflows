{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [ "^workflows/[^/]+\\.ya?ml$" ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s\\w+?_VERSION:\\s'?(?<currentValue>[^'\\s]+)'*?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "github-actions": {
    "fileMatch": [ "^(workflows|\\.github/workflows)/[^/]+\\.ya?ml$" ]
  }
}
