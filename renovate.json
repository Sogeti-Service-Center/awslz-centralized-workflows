{
  "extends": ["config:base"],
  "baseBranches": ["dev"],
  "enabledManagers": ["github-actions","regex"],
  "regexManagers": [
    {
      "fileMatch": ["^workflows/\\w+/*\\w+\\.ya?ml$"],
      "matchStrings": [
        "datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.*?))?\\s+\\w+?_VERSION:\\s'?(?<currentValue>.+?)'?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "github-actions": {"fileMatch": ["^workflows/\\w+/*\\w+\\.ya?ml$"]}
}
