{
  "extends": [
    "config:base"
  ],
  "github-actions": {
    "fileMatch": [
      "^(workflows|\\.github/workflows)/[^/]+\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "^workflows/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s\\w+?_VERSION:\\s'?(?<currentValue>.*\\d)'?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
